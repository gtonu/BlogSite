
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = "_AuthenticationLayout";
}

<!-- Modal -->
<div class="modal fade" id="confirmEmailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="text-center modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <i class="fa-solid fa-circle-check fa-bounce fa-2xl" style="color: #2e9121;"></i>
                <p><strong>Your email verification is successful</strong></p>
            </div>
            
        </div>
    </div>
</div>

@section Styles
{
    <script>
        window.addEventListener("load",(event) =>{
            const confirmEmailModal = document.querySelector("#confirmEmailModal");
            const modalInstance = new bootstrap.Modal(confirmEmailModal);
            modalInstance.show();
        });
    </script>
}

